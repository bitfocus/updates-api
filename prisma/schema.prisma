generator client {
  provider = "prisma-client"
  output   = "../src/prisma"
}

datasource db {
  provider = "mysql"
}

model User {
  id String @id // companion machineid

  app_name    String @db.VarChar(16) // companion/satellite etc
  app_version String @db.VarChar(255) // companion version
  app_build   String @db.VarChar(16) // companion build number

  os_platform String @db.VarChar(16) // windows/macos/linux etc
  os_release  String @db.VarChar(32) // os version
  os_arch     String @db.VarChar(8) // x64/arm64 etc

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
